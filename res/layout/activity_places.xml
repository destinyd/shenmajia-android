<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlacesActivity" >

    <EditText
        android:id="@+id/et_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/btn_place_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/et_place_name"
        android:layout_toRightOf="@+id/et_place_name"
        android:onClick="search_place"
        android:text="@string/search_place" />

    <ListView
        android:id="@+id/lv_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/et_place_name" >

    </ListView>

</RelativeLayout>